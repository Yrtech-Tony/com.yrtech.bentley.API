@section scripts{
    <script src="~/Scripts/api/common.js"></script>
    <script src="~/Scripts/curtom/IncomeCost.js"></script>
    <script src="~/Scripts/xlsx.core.min.js"></script>

    <script type="text/javascript">
        $("#nav_IncomeCost").addClass("active");

        var $table = $('#myIncomeCost');
        var roleType = $("#G_RoleTypeCode").val();
        var account = $("#G_AccountId").val();
        var hdData = loadShops();
        $(function () {
            //下载模板地址
            templateDownloadA.href = host + "/Content/Excel/MonthSaleImport.xlsx";

            hdData.forEach(function (item) {
                var shopName = isZH() ? item.ShopName : item.ShopNameEn;
                $("#pdealer").append($("<option>").val(item.ShopId).text(shopName));
            });
            if (roleType == "SHOP") {
                $('#pdbuttons2').hide();
            }

            $(window).resize(function () {
                $table.bootstrapTable('destroy');// 销毁表格数据
                InitIncomeCostList();
                loadMonthSale();
            });

            InitIncomeCostList();
            HidenField();
            loadMonthSale();
        })
        
        function NameQuery() {
            loadMonthSale();
        }
        
        function loadMonthSale() {
            $.commonGet("DMF/MonthSaleSearch", {
                expenseAccountId: '',
                shopId: $("#pdealer").val(),
                dmfItemId: '',
                marketActionId: '',
                userId: $('#G_UserId').val(),
                roleTypeCode: $('#G_RoleTypeCode').val()
            }, function (data) {
                if (data) {
                    $('#myReimbursement').bootstrapTable("load", data);
                }
            });
        }

        //导入文件事件
        $("#uploadFile").change(uploadLeadsReports);
        function uploadFile() {
            $("#uploadFile").click();
            return false;
        };

        function uploadLeadsReports() {
            var file_obj = document.getElementById('uploadFile').files[0];
            readWorkbookFromLocalFile(file_obj, function (workbook) {
                document.getElementById('uploadFile').value = '';
                var worksheet = workbook.Sheets['我的工作表'];
                var json = XLSX.utils.sheet_to_json(worksheet);
                if (json && json.length > 0) {
                    var leadsReports = [];
                    $.each(json, function (i, item) {
                        try {
                            var CustomerName = $.trim(item["客户姓名"]);
                            var BPNO = $.trim(item["BP号"]);
                            var OwnerCheck = $.trim(item["是否车主"]);
                            var TestDriverCheck = $.trim(item["是否试驾"]);
                            var LeadsCheck = $.trim(item["是否为线索"]);
                            var InterestedModel = $.trim(item["感兴趣车型"]);
                            var DealCheck = $.trim(item["是否成交"]);
                            var DealModel = $.trim(item["成交车型"]);

                            leadsReports.push({
                                MarketActionId: id,
                                CustomerName: CustomerName,
                                BPNO: BPNO,
                                OwnerCheck: OwnerCheck,
                                TestDriverCheck: TestDriverCheck,
                                LeadsCheck: LeadsCheck,
                                InterestedModel: InterestedModel,
                                DealCheck: DealCheck,
                                DealModel: DealModel,
                                InUserId: $("#G_UserId").val(),
                                ModifyUserId: $("#G_UserId").val()
                            });

                        } catch (e) {
                            console.error('处理清单出错', e);
                        }

                    })
                    importLeadsReports(leadsReports);
                } else {
                    alert("Excel中没有清单数据！");
                }
            })
        }

        // 读取本地excel文件
        function readWorkbookFromLocalFile(file, callback) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var data = e.target.result;
                var workbook = XLSX.read(data, { type: 'binary' });
                if (callback) callback(workbook);
            };
            reader.readAsBinaryString(file);
        }

        //导入线索报告信息
        function importLeadsReports(leadsReports) {
            SProcessing();
            $.commonPost("MarketAction/MarketActionAfter2LeadsReportImport", {
                UserId: $("#G_UserId").val(),
                ListJson: JSON.stringify(leadsReports)
            }, function (data) {
                EProcessing();
                console.log(data);
                loadCueReport();
            }, EProcessing);
        }


        function SProcessing() {
            //loading层
            var index = layer.load(1, {
                shade: [0.1, '#fff'] //0.1透明度的白色背景
            });
        }
        function EProcessing() {
            layer.closeAll('loading');
        }
    </script>
}